	<!--  문의하기 등록 form -->	

	<c:if test="${viewType eq 'create'}">
		<form id="insertFrm" name="insertFrm" action="#" method="POST">
		<div class="layout01">
			<h2 class="">문의하기 - 전남콘텐츠기업육성센터와 함께 기업의 경쟁력을 높이세요.</h2>
